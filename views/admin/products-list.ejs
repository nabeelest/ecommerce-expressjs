<%- include('../includes/head.ejs')%>
<link rel="stylesheet" href="/css/products-list.css">
</head>
<body>
    <header>
        <h1>Omega Shop - Online Store</h1>
    </header>

    <div class="container">
        <% if(products.length > 0) {  %>
            <% for(let product of products){ %>
            <div class="product">
                <img src=<%=product.productUrl%>>
                <div class="product-title"><%=product.productName%></div>
                <div class="product-description"><%=product.productDescription%></div>
                <div class="product-price">$<%=product.productPrice%></div>
                <a href="/edit-product/<%=product.productId%>" class="cta-button edit">Edit</a>
                <form action="/admin/delete-product" method="POST">
                    <a href="/delete-product/<%=product.productId%>" type="submit" class="cta-button delete">Delete</a>
                </form>
            </div>
            <% } %>
        <% } else { %>
            <div class="no-records">
                <h1>No Records</h1>
            </div>
        <% } %> 
    </div>
    <div class="container">
        <a href="/" class="cta-button">Go to Home</a>
    </div>
</body>
</html>