<%- include('../includes/head.ejs')%>
<link rel="stylesheet" href="/css/products-list.css">
</head>
<body>
    <header>
        <h1>Omega Shop - Online Store</h1>
    </header>

    <div class="container">
        <% if(products.length > 0) {  %>
            <% for(let product of products){ %>
                <div class="product">
                    <img src="<%=product.productUrl%>">
                    <div class="product-title"><%=product.productName%></div>
                    <div class="product-description"><%=product.productDescription%></div>
                    <div class="product-price">$<%=product.productPrice%></div>
                    <div class="button-container">
                        <a href="/shop/product-detail/<%=product.productId%>" class="cta-button cart-button edit">Detail</a>
                        <a href="/admin/edit-product/<%=product.productId%>"  class="cta-button delete">Edit</a>
                        <a href="/admin/delete-product/<%=product.productId%>" class="cta-button delete">Delete</a>
                    </div>
                </div>
            <% } %>
        <% } else { %>
            <div class="no-records">
                <h1>No Records</h1>
            </div>
        <% } %> 
    </div>
    <div class="container">
        <a href="/" class="cta-button">Go to Home</a>
    </div>
    <%- include('../includes/footer.ejs')%>
</body>
</html>