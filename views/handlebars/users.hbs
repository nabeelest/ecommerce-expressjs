<body>
    <h1>List of Users Signed Up</h1>
    {{#if hasUsers}}
    <table>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Country</th>
        </tr>
        {{#each users}}
        <tr>
            <td>{{this.username}}</td>
            <td>{{this.email}}</td>
            <td>{{this.country}}</td>
        </tr>
        {{/each}}
    </table>
    {{else}}
    <h1>No Records</h1>
    {{/if}}
    <div class="container">
        <a href="/" class="cta-button">Back to Home</a>
    </div>
</body>