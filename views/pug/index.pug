extends layouts/main-layout.pug

block styles
    link(rel='stylesheet', href='/css/index.css')

block content
    body
        header
          h1 Omega Social
          p Connect with the World
          h1 With PUG
          a(href='/signup', class='cta-button') Sign Up Now

        .container
          h2 Welcome to Omega Social
          p Omega Social is a powerful social networking platform that helps you connect with friends,
            share your life moments, and discover new interests.

          img.app-screenshot(src='app_screenshot.png', alt='Omega Social App Screenshot', class='app-screenshot')

          h2 Key Features
          .features
            .feature-item
              i.feature-icon &#128100;
              h3 User Profiles
              p Create your personalized profile and showcase your interests and achievements.

            .feature-item
              i.feature-icon &#128172;
              h3 Instant Messaging
              p Chat with friends in real-time with our seamless instant messaging system.

            .feature-item
              i.feature-icon &#128289;
              h3 Discover Communities
              p Explore and join various communities based on your interests and hobbies.

        .container
          a(href='/users', class='cta-button') Browse Users

        footer
          p &copy; 2023 Omega Social. All rights reserved.
